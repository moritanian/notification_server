<h1>Users#showall</h1>

<%= @todos.length %> 件
<table>
    <tr>
        <th>id </th>
        <th>user_id</th>
        <th>title</th>
        <th>text</th>
        <th>is notify</th>
        <th>is memo </th>
        <th>lookup time</th>
        <th>notify time</th>
        <th>todo time</th>
        <th> update </th>
        <th>manipulate</th>
    </tr>
    <% for todo in @todos do  %>
    <tr>
        <td> <%= todo.id %></td>
        <td> <%= todo.user_id %></td>
        <td> <%= todo.titleStr %></td>
        <td> <%= todo.todoText %></td>
        <td> <%= todo.IsNotify %></td>
        <td> <%= todo.IsMemo %></td>
        <td> <%= todo.lookUpTimeStr %></td>
        <td> <%= todo.notificationTimeStr %></td>
        <td> <%= todo.todoTimeStr %></td>
        <td> <%= todo.updated_at%> </td>
        <td> <%= link_to "delete", "/users/todo/" + (todo.id.to_s) , method: :delete, data: { confirm: "削除しますか？" } %> </td>
    </tr>
    <% end %>